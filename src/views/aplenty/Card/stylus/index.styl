vw(size)
  (size/13.66)vw
.card-index
  background: #fff
  padding: vw(40) 0 0 vw(55)
  overflow hidden
  .card-index-title
    padding: 0 0 vw(25) 0
    font-size: vw(22)
  .card:hover
    background:rgba(255,255,255,1)
    box-shadow:0px 2px 9px 1px rgba(0, 0, 0, 0.12);
    top: -5px
  .card
    position relative
    background: #fff
    width: 21%
    float left
    margin-right:3.3%
    margin-bottom: vw(25)
    border:1px solid rgba(234, 237, 243, 1)
    box-shadow:0px 1px 3px 0px rgba(0, 0, 0, 0.04);
    transition: all .3s
    cursor:pointer
    border-radius: 5px
    .card-img
      height:vw(200)
      border-bottom: 1px solid #ccc
      overflow hidden
      img
        width: 100%
    .card-title
      height:vw(60)
      line-height: vw(30)
      padding: vw(8)
      text-overflow:ellipsis
      overflow: hidden
  .loadingBtn
    text-align: center
    padding-bottom: vw(15)
    
