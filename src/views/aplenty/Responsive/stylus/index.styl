vw(size)
  (size/13.66)vw
.responsive-index
  background: #fff
  padding: 0
  overflow: auto
  .header-content
    background: #f8f9fa
    height 500px
    .header-info,.header-img
      padding: 0 vw(30)
      height 100%
      display:flex
      flex-direction: column
      justify-content: space-around
      .info-desc
        line-height: 30px
        font-size: 16px
        color: #777
        h1
          font-size: 36px
          line-height:60px
          color: #353c4e
      .img-content
        height: 0
        padding-bottom: 100%
        border-radius: 50%
        overflow hidden
        margin: vw(30) 0
        img
          width: 100%
  .responsive-title
    text-align: center
    margin: vw(40) 0 vw(30)
    h2
      font-size: 50px
      color: #222
      position relative
    h2:after
      position: absolute;
      content: '';
      background: #333;
      width: 10%;
      height: 2px;
      bottom: 0%;
      left: 45%;
  .about-content
    height: 350px
    .about-info
      padding: 0 vw(30)
      line-height: 30px
      font-size: 15px
      margin-bottom: vw(40)
      h1
        font-size: 30px
    .about-icon
      padding: 0 0 0 vw(30)
      .icon-content:hover
        background: #42cccc
      .icon-content
        text-align: center
        width: 80px
        height: 80px
        line-height: 80px
        background-color: #f85a40
        border-radius: 50%
        margin-bottom: 20px
        color: #fff
        font-size: 40px
        transition: all .5s
    .about-img
      display:flex
      flex-direction: column
      justify-content: space-around
      padding: 0 vw(30)
      .img-content
        height 0
        padding-bottom: 100%
        img
          width: 100%
