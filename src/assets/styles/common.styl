@import './varibles.styl'
.af-menu
  position fixed
  height 100%
  width: 220px
  transition: all 0.4s
  background: rgb(48, 65, 86)
  &.isCollapse
    width: 64px
.af-main
  height 100%;
  padding-left: 220px
  // width:calc(100% - 220px);
  transition: padding .4s
  overflow auto
  background:#f0f2f5;
  &.active
    padding-left: 64px
    // width:calc(100% - 64px);
// &代表并且，紧接无符号，>代表子元素
  .brand
    background:#fff;
    height:vw(50);
    color:rgba(56, 136, 250, 1);
    width: 100%;
    line-height: vw(50)
    font-size: vw(25);
    position relative
    .brand-name
      padding-left: vw(70)
    .theme-picker-component
      vertical-align: middle
      display: inline-block
      position absolute
      right: vw(120)
      top: 50%
      transform: translate(0,-50%)
      line-height: 0
      font-size: 0
    .full-creen
      vertical-align: middle
      display: inline-block
      position absolute
      right: vw(170)
      top: 50%
      transform: translate(0,-50%)
      line-height: 0
      font-size: 0
    .exit-dropdown
      cursor pointer
      height: vw(40)
      float: right
      margin-right: vw(20)
      color: rgba(56, 136, 250, 1);
    .toggleIcon
      position:absolute
      left: vw(10)
      top: vw(13)
  .router-tab
    height: vw(34);
    width: 100%;
    background: #eaebeb;
    border-bottom: 1px solid #d8dce5;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .12), 0 0 3px 0 rgba(0, 0, 0, .04);
    .tab-item
      display: inline-block;
      position: relative;
      cursor: pointer;
      height: vw(26);
      line-height: vw(26);
      border: 1px solid #d8dce5;
      color: #495060;
      background: #fff;
      padding: 0 vw(8);
      font-size: vw(13);
      margin-left: vw(5);
      margin-top: vw(4);
      transition: all 0.8s
      // min-width 100px
      &:hover
        transform: translate(5px,-5px)
        span
          // color: rgba(64, 158, 255, 1)
      &.active
        span
          // color: rgba(64, 158, 255, 1)
      span
        margin-right: vw(5)
        white-space: nowrap;
      i:hover
        color: rgba(64, 158, 255, 1)
.af-search
  padding: vw(10) 0 vw(20) vw(10)
  overflow hidden
  .search-left
    float left
    >*
      margin-right:vw(16)
  .search-right
    float:right
  label
    font-size:vw(14)
    vertical-align:middle
    color: #3B4045
    margin-right vw(8) !important
  .el-input
    display inline-block
    width vw(200)
.alert:before
	content:''
	width:0
	height:100%
	display:inline-block
	vertical-align:middle
.alert
	position:fixed
	top:0
	left:0
	width:100%
	height:100%
	z-index:6
	background-color:rgba(0,0,0,0.6)
	font-size:0
	text-align:center
	.alert-body
		background-color:#fff
		display:inline-block
		vertical-align:middle
		font-size:vw(14)
		text-align:left
    border-radius: 5px
		.alert-title
			height:vw(50)
			line-height:vw(50)
			padding:0 vw(12)
			border-bottom:1px solid #eaedf3
		.alert-main
			padding:vw(15)
			position:relative
.closeBtn
  margin-left: vw(-15)
  margin-right: vw(-15)
  border-top: 1px solid #eaedf3
  padding:vw(15) vw(15) 0 0
  text-align: right
.is-dark
  background: rgba(56, 136, 250, 0.8) !important
.el-pagination
  text-align: right
  margin-top: vw(20)
.el-button--mini
  padding: vw(7) vw(15) !important
  font-size: vw(12) !important